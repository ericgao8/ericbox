<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="15dp" android:textColor="#333333" android:id="@+id/tv_tx_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="提现到支付宝"/>
            <TextView android:textSize="12dp" android:textColor="#999999" android:id="@+id/tv_tx_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="2024-03-26 17:26:34"/>
        </LinearLayout>
        <LinearLayout android:gravity="end" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="10dp">
            <TextView android:textSize="15dp" android:textColor="#333333" android:id="@+id/tv_tx_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+1844.84"/>
            <TextView android:textSize="12dp" android:textColor="#3a5bff" android:id="@+id/tv_tx_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="手动打款"/>
        </LinearLayout>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_enter" android:background="@mipmap/ic_enter" android:layout_width="20dp" android:layout_height="20dp"/>
    </LinearLayout>
    <View android:background="#e6e6e6" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="20dp" android:layout_marginBottom="15dp"/>
</LinearLayout>
