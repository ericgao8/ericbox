<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/ll_item" android:background="@color/white" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="20dp">
        <ImageView android:id="@+id/iv_item_hide" android:layout_width="20dp" android:layout_height="20dp" android:src="@mipmap/ic_eye_close"/>
        <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@mipmap/red_marker" android:layout_marginStart="10dp"/>
        <TextView android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_content" android:layout_width="0dp" android:layout_height="wrap_content" android:text="地标" android:singleLine="true" android:layout_weight="1" android:layout_marginStart="15dp"/>
        <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@mipmap/go"/>
    </LinearLayout>
    <View android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_marginStart="50dp"/>
</LinearLayout>
