    <TextView android:textColor="@color/white" android:id="@+id/tv_sync" android:background="@drawable/btn_blue_bg" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:text="同步" android:paddingStart="12dp" android:paddingEnd="12dp" android:layout_marginEnd="15dp" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="@+id/tv_three"/>
    <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_three" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="VR数据同步" android:layout_marginStart="15dp" app:layout_constraintEnd_toStartOf="@+id/switch_down" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/sub_two"/>
    <TextView android:textSize="10dp" android:textColor="#999999" android:id="@+id/sub_three" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="当VR数据有更新，开启此功能可同步更新VR数据，同步过程中，请不要退出APP。" android:layout_marginStart="15dp" android:layout_marginEnd="20dp" app:layout_constraintEnd_toStartOf="@+id/switch_down" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_three"/>
    <TextView android:textColor="@color/white" android:id="@+id/tv_clear" android:background="@drawable/btn_blue_bg" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:text="清空" android:paddingStart="12dp" android:paddingEnd="12dp" android:layout_marginEnd="15dp" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="@+id/tv_four"/>
    <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_four" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="清空VR缓存" android:layout_marginStart="15dp" app:layout_constraintEnd_toStartOf="@+id/switch_down" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/sub_three"/>
    <TextView android:textSize="10dp" android:textColor="#999999" android:id="@+id/sub_four" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="当VR数据发生错误时，可点击此功能清楚本地错误VR数据。" android:layout_marginStart="15dp" android:layout_marginEnd="20dp" app:layout_constraintEnd_toStartOf="@+id/switch_down" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_four"/>
</androidx.constraintlayout.widget.ConstraintLayout>
