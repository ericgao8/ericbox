    <androidx.appcompat.widget.SwitchCompat android:id="@+id/use_down" android:layout_width="wrap_content" android:layout_height="24dp" android:layout_marginTop="17dp" android:checked="false" android:textOn="" android:textOff="" android:layout_marginEnd="15dp" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="@+id/tv_two" app:showText="true"/>
    <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_two" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="优先使用缓存数据" android:layout_marginStart="15dp" app:layout_constraintEnd_toStartOf="@+id/switch_down" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/sub_one"/>
