    <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_one" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:text="VR数据离线缓存" android:layout_marginStart="15dp" app:layout_constraintEnd_toStartOf="@+id/switch_down" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/fr_top"/>
