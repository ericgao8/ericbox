<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/m_root_view" android:background="@color/easy_photos_bg_primary" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.huantansheng.easyphotos.ui.widget.PreviewRecyclerView android:id="@+id/rv_photos" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:id="@+id/m_bar_root_view" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/m_top_bar_layout" android:background="@color/easy_photos_status_bar" android:layout_width="match_parent" android:layout_height="wrap_content" style="?attr/metaButtonBarStyle">
            <RelativeLayout android:layout_gravity="top" android:id="@+id/m_top_bar" android:background="@color/easy_photos_bar_primary" android:focusable="true" android:fitsSystemWindows="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="42dp">
                <ImageView android:id="@+id/iv_back" android:padding="10dp" android:layout_width="42dp" android:layout_height="match_parent" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" app:srcCompat="@drawable/ic_arrow_back_easy_photos"/>
                <View android:layout_gravity="center_vertical" android:id="@+id/m_back_line" android:background="@color/easy_photos_bar_primary_dark" android:layout_width="1dp" android:layout_height="22dp" android:layout_alignRight="@+id/iv_back" android:layout_centerVertical="true" android:layout_alignEnd="@+id/iv_back"/>
                <com.huantansheng.easyphotos.ui.widget.PressedTextView android:textColor="@color/easy_photos_fg_primary" android:gravity="center" android:id="@+id/tv_number" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_toRightOf="@+id/m_back_line" android:layout_toEndOf="@+id/m_back_line"/>
                <com.huantansheng.easyphotos.ui.widget.PressedTextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/menu_text_easy_photos" android:gravity="center" android:id="@+id/tv_done" android:background="@drawable/bg_menu_done_easy_photos" android:padding="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:maxWidth="200dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="8dp" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </FrameLayout>
        <RelativeLayout android:layout_gravity="bottom" android:id="@+id/m_bottom_bar" android:background="@color/easy_photos_bar_primary_translation" android:focusable="true" android:fitsSystemWindows="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" style="?attr/metaButtonBarStyle">
            <FrameLayout android:id="@+id/fl_fragment" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
                <fragment android:name="com.huantansheng.easyphotos.ui.PreviewFragment" android:id="@+id/fragment_preview" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </FrameLayout>
            <com.huantansheng.easyphotos.ui.widget.PressedTextView android:textStyle="bold" android:textColor="@color/easy_photos_fg_primary" android:gravity="center" android:id="@+id/tv_edit" android:paddingLeft="16dp" android:paddingRight="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="42dp" android:text="@string/edit_easy_photos" android:layout_below="@+id/fl_fragment" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
            <TextView android:textStyle="bold" android:textColor="@color/easy_photos_fg_primary" android:gravity="center" android:id="@+id/tv_original" android:layout_width="wrap_content" android:layout_height="42dp" android:text="@string/original_easy_photos" android:layout_below="@+id/fl_fragment" android:layout_centerInParent="true"/>
            <TextView android:textStyle="bold" android:textColor="@color/easy_photos_fg_primary" android:gravity="center" android:id="@+id/tv_selector" android:layout_width="wrap_content" android:layout_height="42dp" android:text="@string/selector_easy_photos" android:layout_toLeftOf="@+id/iv_selector" android:layout_below="@+id/fl_fragment" android:layout_toStartOf="@+id/iv_selector"/>
            <ImageView android:id="@+id/iv_selector" android:paddingLeft="6dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="42dp" android:layout_below="@+id/fl_fragment" android:layout_alignParentRight="true" android:paddingStart="6dp" android:paddingEnd="16dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_selector_easy_photos"/>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>
