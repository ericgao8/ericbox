<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/constraint_root" android:background="@drawable/dialog_user_point" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textStyle="bold" android:textColor="#3a5bff" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="3分钟快速了解拍摄全景需要哪些硬件" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
    <View android:id="@+id/view_line" android:background="#e8e8e8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    <androidx.core.widget.NestedScrollView android:paddingBottom="17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="22dp" android:layout_marginEnd="22dp" app:layout_constraintTop_toBottomOf="@+id/view_line">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12dp" android:textColor="#666666" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="360度全景图片是一张记录水平方向360度，垂直方向180度，宽高比为2:1的图片。 拍摄360度全景有很多方法，下面介绍用无人机机拍摄全景。"/>
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="无人机航拍"/>
            <TextView android:textSize="12dp" android:textColor="#666666" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="与单反相机拍摄类似，无人机航拍全景也需要环绕一个点进行360°取景拍摄。 无人机推荐使用大疆无人机，大部分机型支持一键全景照片拍摄，无需拍摄技术，拍完无需任何后期二次处理，直接导入平台即可在地图中展现拍摄的全景画面，可以直接通过手机连接内存卡上传，或者在电脑批量上传。"/>
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="推荐机型:"/>
            <TextView android:textSize="12dp" android:textColor="#3a5bff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="御Mavic系列、Mini系列，一定要先打听是否支持一键全景拍摄才可以。"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
