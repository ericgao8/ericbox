<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/fr_top" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp" app:layout_constraintTop_toTopOf="0">
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/ll_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp">
            <ImageView android:id="@+id/back" android:background="@mipmap/ic_back" android:layout_width="24dp" android:layout_height="24dp"/>
            <TextView android:textSize="14dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="返回"/>
        </LinearLayout>
        <TextView android:textSize="17dp" android:textColor="@color/black" android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_title" android:layout_width="0dp" android:layout_height="wrap_content" android:text="VR展示" android:lines="1" android:layout_weight="1" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
        <LinearLayout android:layout_gravity="end|center_vertical" android:id="@+id/ll_fun" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="10dp">
            <TextView android:textSize="9dp" android:textColor="#3a5bff" android:id="@+id/tv_luzhi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="录制" android:drawableTop="@mipmap/ic_vr_luzhi" android:layout_marginEnd="10dp"/>
            <TextView android:textSize="9dp" android:textColor="#3a5bff" android:id="@+id/tv_suiji" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="随机" android:drawableTop="@mipmap/ic_vr_suiji" android:layout_marginEnd="10dp"/>
            <TextView android:textSize="9dp" android:textColor="#999999" android:id="@+id/tv_error" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="报错" android:drawableTop="@mipmap/ic_vr_error"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <WebView android:id="@+id/webView" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ImageView android:id="@+id/iv_tg" android:layout_width="40dp" android:layout_height="77dp" android:layout_marginTop="100dp" android:src="@mipmap/ic_jttg" android:layout_marginStart="15dp"/>
        <ImageView android:id="@+id/iv_try_suiji" android:background="@mipmap/ic_vr_suiji_try" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="100dp" android:layout_marginStart="15dp"/>
    </FrameLayout>
</LinearLayout>
