<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fr_top" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp" app:layout_constraintTop_toTopOf="0">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:background="@mipmap/ic_back" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="7dp"/>
        <TextView android:textSize="17dp" android:textColor="@color/black" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="重置密码"/>
    </FrameLayout>
    <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#333333" android:id="@+id/tv_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="84dp" android:text="手机号" android:layout_marginStart="23dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
    <EditText android:textSize="12dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:id="@+id/etv_phone" android:background="@color/white" android:paddingBottom="11dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:hint="请输入您的手机号" android:inputType="phone" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:layout_constraintTop_toBottomOf="@+id/tv_phone"/>
    <View android:id="@+id/phone_line" android:background="#e8e8e8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:layout_constraintTop_toBottomOf="@+id/etv_phone"/>
    <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#333333" android:id="@+id/tv_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="27dp" android:text="验证码" android:layout_marginStart="23dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/phone_line"/>
    <EditText android:textSize="12dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:id="@+id/etv_code" android:background="@color/white" android:paddingBottom="11dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:hint="请输入验证码" android:inputType="numberDecimal" android:layout_marginStart="23dp" android:layout_marginEnd="20dp" app:layout_constraintEnd_toStartOf="@+id/btn_send_code" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_code"/>
    <Button android:textSize="12dp" android:textColor="@color/white" android:id="@+id/btn_send_code" android:background="@drawable/login_send_code_bg" android:layout_width="wrap_content" android:layout_height="28dp" android:layout_marginTop="17dp" android:text="获取验证码" android:layout_marginEnd="23dp" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_code"/>
    <View android:id="@+id/code_line" android:background="#e8e8e8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:layout_constraintTop_toBottomOf="@+id/etv_code"/>
    <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#333333" android:id="@+id/tv_pwd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="27dp" android:text="密码" android:layout_marginStart="23dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/code_line"/>
    <EditText android:textSize="12dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:id="@+id/etv_pwd" android:background="@color/white" android:paddingBottom="11dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:hint="请输入密码" android:inputType="textPassword" android:layout_marginStart="23dp" android:layout_marginEnd="20dp" app:layout_constraintEnd_toStartOf="@+id/iv_password_show" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_pwd"/>
    <ImageView android:id="@+id/iv_password_show" android:background="@mipmap/ic_passwor_close" android:layout_width="19dp" android:layout_height="18dp" android:layout_marginTop="21dp" android:layout_marginEnd="23dp" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_pwd"/>
    <View android:id="@+id/pwd_line" android:background="#e8e8e8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:layout_constraintTop_toBottomOf="@+id/etv_pwd"/>
    <TextView android:textSize="12dp" android:textColor="#f73d00" android:id="@+id/tv_error" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="错误" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:layout_constraintTop_toBottomOf="@+id/pwd_line"/>
    <Button android:textSize="12dp" android:textColor="@color/white" android:id="@+id/btn_login" android:background="@drawable/login_send_code_bg" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="40dp" android:text="确认" android:layout_marginStart="48dp" android:layout_marginEnd="48dp" app:layout_constraintTop_toBottomOf="@+id/tv_error"/>
    <LinearLayout android:gravity="center_vertical" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0">
        <ImageView android:id="@+id/iv_private" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="5dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/circle_vip_select_bg"/>
        <TextView android:textSize="12dp" android:textColor="#333333" android:id="@+id/tv_xy_one" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="已阅读并同意"/>
        <TextView android:textSize="12dp" android:textColor="#3a5bff" android:id="@+id/tv_xy_three" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="《隐私政策》"/>
        <TextView android:textSize="12dp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="和"/>
        <TextView android:textSize="12dp" android:textColor="#3a5bff" android:id="@+id/tv_xy_two" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="《用户协议》"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
