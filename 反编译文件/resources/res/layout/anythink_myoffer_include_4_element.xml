<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="22dp">
    <RelativeLayout android:id="@+id/anythink_myoffer_four_element_container" android:paddingLeft="6dp" android:paddingRight="6dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="22dp" android:layout_weight="1">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/anythink_myoffer_four_element_container_subinfo" android:layout_width="wrap_content" android:layout_height="match_parent">
            <com.anythink.core.common.ui.MarqueeTextView android:textSize="10dp" android:textColor="#a0a0a0" android:id="@+id/anythink_myoffer_version_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="10dp" android:textColor="#a0a0a0" android:id="@+id/anythink_myoffer_privacy_agreement" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/anythink_myoffer_panel_privacy" style="@style/anythink_myoffer_banner_privacy_text_style"/>
            <View android:id="@+id/anythink_myoffer_center_line1" android:background="#a0a0a0" android:visibility="gone" android:layout_width="1dp" android:layout_height="11dp" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"/>
            <TextView android:textSize="10dp" android:textColor="#a0a0a0" android:id="@+id/anythink_myoffer_permission_manage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/anythink_myoffer_panel_permission" style="@style/anythink_myoffer_banner_privacy_text_style"/>
            <View android:id="@+id/anythink_myoffer_center_line2" android:background="#a0a0a0" android:visibility="gone" android:layout_width="1dp" android:layout_height="11dp" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"/>
            <TextView android:textSize="10dp" android:textColor="#a0a0a0" android:id="@+id/anythink_myoffer_function_manage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/anythink_myoffer_panel_funtion" style="@style/anythink_myoffer_banner_privacy_text_style"/>
