        <com.anythink.core.common.ui.MarqueeTextView android:textSize="10dp" android:textColor="#a0a0a0" android:ellipsize="marquee" android:gravity="left" android:id="@+id/anythink_myoffer_publisher_name" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_toRightOf="@+id/anythink_myoffer_four_element_container_subinfo" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:marqueeRepeatLimit="marquee_forever" style="@style/anythink_myoffer_single_line.nofontpadding"/>
