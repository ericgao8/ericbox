        <com.anythink.core.common.ui.component.RoundImageView android:id="@+id/anythink_myoffer_ad_logo" android:visibility="gone" android:layout_width="@dimen/anythink_myoffer_normal_ad_logo_width" android:layout_height="@dimen/anythink_myoffer_normal_ad_logo_height" android:layout_marginRight="@dimen/anythink_myoffer_ad_choice_margin_right"/>
    </FrameLayout>
