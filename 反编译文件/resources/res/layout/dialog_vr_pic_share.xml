<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_content" android:background="@mipmap/ic_vr_share_pic" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="图片截图已保存相册"/>
            <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView android:textSize="10dp" android:textColor="#901a1a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="* 如需发布多张图，关闭再截图"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
            <TextView android:textSize="12dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="标题编辑"/>
            <TextView android:textSize="10dp" android:textColor="#2b9d08" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="(仅微信卡片式标题使用)" android:layout_marginStart="3dp"/>
        </LinearLayout>
        <EditText android:textSize="14dp" android:textColor="@color/black" android:id="@+id/etv_title" android:background="@drawable/bg_text_vr_pic" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
            <TextView android:textSize="12dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="标题编辑"/>
            <TextView android:textSize="10dp" android:textColor="#2b9d08" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="(仅微信卡片式标题使用)" android:layout_marginStart="3dp"/>
        </LinearLayout>
        <EditText android:textSize="14dp" android:textColor="@color/black" android:id="@+id/etv_content" android:background="@drawable/bg_text_vr_pic" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:minHeight="50dp"/>
        <LinearLayout android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
            <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_next" android:background="@drawable/bg_vr_pic_btn" android:paddingTop="7dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下一条" android:paddingStart="15dp" android:paddingEnd="15dp"/>
            <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_copy" android:background="@drawable/bg_vr_pic_btn" android:paddingTop="7dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="复制" android:paddingStart="15dp" android:paddingEnd="15dp" android:layout_marginStart="25dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_goto_ztc" android:background="#fee1d4" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="15dp">
            <ImageView android:background="@mipmap/ic_fxtg_zq" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginStart="30dp"/>
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="#b24b22" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VIP邀请有现金奖励" android:layout_marginStart="10dp"/>
            <ImageView android:id="@+id/iv_goto" android:background="@mipmap/ic_share_qck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
            <View android:background="#e1e1e1" android:layout_width="0dp" android:layout_height="0.5dp" android:layout_weight="1"/>
            <TextView android:textSize="10dp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="分享" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
            <View android:background="#e1e1e1" android:layout_width="0dp" android:layout_height="0.5dp" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_douyin" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:background="@mipmap/ic_share_dy_black" android:layout_width="37dp" android:layout_height="37dp"/>
                <TextView android:textSize="12dp" android:textColor="#3c3c3c" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="一键发布抖音作品"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_weichat" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:background="@mipmap/ic_wx_share" android:layout_width="37dp" android:layout_height="37dp"/>
                <TextView android:textSize="12dp" android:textColor="#3c3c3c" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="微信好友"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_pyq" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:background="@mipmap/ic_wxq_share" android:layout_width="37dp" android:layout_height="37dp"/>
                <TextView android:textSize="12dp" android:textColor="#3c3c3c" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="朋友圈"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/iv_close" android:background="@mipmap/ic_tourism_close" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="20dp"/>
</LinearLayout>
