<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fr_top" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp" app:layout_constraintTop_toTopOf="0">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:background="@mipmap/ic_back" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="7dp"/>
        <TextView android:textSize="17dp" android:textColor="@color/black" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="更换手机号"/>
    </FrameLayout>
    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#333333" android:id="@+id/tv_phone_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="75dp" android:text="当前绑定的手机号码:" android:layout_marginStart="23dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/color_3A5BFF" android:id="@+id/tv_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="5dp" app:layout_constraintStart_toEndOf="@+id/tv_phone_title" app:layout_constraintTop_toTopOf="@+id/tv_phone_title"/>
    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#333333" android:id="@+id/tv_sr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="输入要绑定的新手机号:" android:layout_marginStart="23dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_phone_title"/>
    <LinearLayout android:gravity="center" android:id="@+id/ll_phone_line" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:layout_marginStart="23dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_sr">
        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#333333" android:id="@+id/tv_jbl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+86"/>
        <EditText android:textSize="16dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:gravity="center_vertical" android:id="@+id/etv_phone" android:background="@color/white" android:layout_width="0dp" android:layout_height="match_parent" android:hint="请输入您的手机号" android:layout_weight="1" android:inputType="phone" android:layout_marginStart="10dp" android:layout_marginEnd="23dp" app:layout_constraintTop_toBottomOf="@+id/tv_phone"/>
    </LinearLayout>
    <View android:id="@+id/phone_line" android:background="#e8e8e8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:layout_constraintTop_toBottomOf="@+id/ll_phone_line"/>
    <LinearLayout android:gravity="center" android:id="@+id/ll_yzm" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/phone_line">
        <TextView android:textSize="16dp" android:textColor="#333333" android:id="@+id/tv_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="验证码" android:layout_marginStart="23dp"/>
        <EditText android:textSize="16dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:gravity="center_vertical" android:id="@+id/etv_code" android:background="@color/white" android:layout_width="0dp" android:layout_height="match_parent" android:hint="请输入验证码" android:layout_weight="1" android:inputType="numberDecimal" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:layout_constraintEnd_toStartOf="@+id/btn_send_code" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_code"/>
        <Button android:textSize="12dp" android:textColor="@color/white" android:id="@+id/btn_send_code" android:background="@drawable/login_send_code_bg" android:layout_width="wrap_content" android:layout_height="28dp" android:text="获取验证码" android:layout_marginEnd="23dp" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_code"/>
    </LinearLayout>
    <View android:id="@+id/code_line" android:background="#e8e8e8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_marginStart="23dp" android:layout_marginEnd="23dp" app:layout_constraintTop_toBottomOf="@+id/ll_yzm"/>
    <Button android:textSize="12dp" android:textColor="@color/white" android:id="@+id/btn_login" android:background="@drawable/login_send_code_bg" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="40dp" android:text="确认" android:layout_marginStart="48dp" android:layout_marginEnd="48dp" app:layout_constraintTop_toBottomOf="@+id/code_line"/>
</androidx.constraintlayout.widget.ConstraintLayout>
