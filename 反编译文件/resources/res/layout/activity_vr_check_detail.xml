        <TextView android:textSize="14dp" android:textColor="#787878" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:text="名称" android:layout_weight="1" android:layout_marginStart="14dp"/>
