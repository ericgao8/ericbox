    </LinearLayout>
    <TextView android:textSize="14dp" android:textColor="#787878" android:background="@color/white" android:paddingLeft="14dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="第三方链接" android:layout_marginStart="18dp" android:layout_marginEnd="18dp"/>
