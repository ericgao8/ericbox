    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="18dp" android:layout_marginEnd="18dp">
        <TextView android:textSize="14dp" android:textColor="#787878" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:text="纬度" android:layout_weight="1" android:layout_marginStart="14dp"/>
        <TextView android:textSize="14dp" android:textColor="#000000" android:ellipsize="end" android:gravity="end" android:id="@+id/tv_weidu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1" android:paddingEnd="15dp" android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="18dp" android:layout_marginEnd="18dp">
        <TextView android:textSize="14dp" android:textColor="#787878" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:text="上传时间" android:layout_weight="1" android:layout_marginStart="14dp"/>
        <TextView android:textSize="14dp" android:textColor="#000000" android:ellipsize="end" android:gravity="end" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1" android:paddingEnd="15dp" android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="18dp" android:layout_marginEnd="18dp">
        <TextView android:textSize="14dp" android:textColor="#787878" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:text="状态" android:layout_weight="1" android:layout_marginStart="14dp"/>
        <TextView android:textSize="14dp" android:textColor="#000000" android:ellipsize="end" android:gravity="end" android:id="@+id/tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1" android:paddingEnd="15dp" android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="18dp" android:layout_marginEnd="18dp">
        <TextView android:textSize="14dp" android:textColor="#787878" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:text="积分" android:layout_weight="1" android:layout_marginStart="14dp"/>
        <TextView android:textSize="14dp" android:textColor="#000000" android:ellipsize="end" android:gravity="end" android:id="@+id/tv_jifen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="名称" android:lines="1" android:paddingEnd="15dp" android:layout_marginStart="10dp"/>
    </LinearLayout>
