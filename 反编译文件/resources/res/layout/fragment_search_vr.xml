<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_search" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="64dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
        <LinearLayout android:gravity="center_vertical" android:background="@drawable/bg_search_red" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:layout_width="19dp" android:layout_height="19dp" android:src="@mipmap/ic_search_new" android:layout_marginStart="14dp"/>
            <EditText android:textSize="14dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:id="@+id/etv_search" android:background="#f5f5f5" android:layout_width="0dp" android:layout_height="match_parent" android:hint="请输入关键字搜索" android:layout_weight="1" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        </LinearLayout>
        <Button android:textSize="14dp" android:textColor="#ffffff" android:id="@+id/btn_search" android:background="@drawable/btn_blue_bg" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="搜索" android:layout_marginStart="10dp"/>
    </LinearLayout>
    <TextView android:textSize="14dp" android:textColor="#333333" android:id="@+id/tv_hot" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="热门搜索" android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/ll_search"/>
    <com.zhy.view.flowlayout.TagFlowLayout android:id="@+id/id_flowlayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_hot"/>
    <TextView android:textSize="14dp" android:textColor="#333333" android:id="@+id/tv_hostory" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="23dp" android:text="搜索历史" android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/id_flowlayout"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_query" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/tv_hostory"/>
    <TextView android:textSize="14dp" android:textColor="#333333" android:id="@+id/clear_hostory" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="23dp" android:text="清空搜索历史" android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/rv_query"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_result" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toBottomOf="@+id/ll_search">
        <View android:background="#f5f5f5" android:layout_width="match_parent" android:layout_height="10dp"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_result" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
