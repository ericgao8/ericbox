<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fr_top" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp" app:layout_constraintTop_toTopOf="0">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:background="@mipmap/ic_back" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="7dp"/>
        <TextView android:textSize="17dp" android:textColor="@color/black" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="保存图源"/>
    </FrameLayout>
    <TextView android:textSize="14dp" android:textColor="#222222" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:text="名称:" android:layout_marginStart="18dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/fr_top"/>
    <EditText android:textSize="14dp" android:textColor="#222222" android:textColorHint="#cccccc" android:id="@+id/etv_name" android:background="@color/white" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:hint="请输入图源名称" android:layout_marginStart="12dp" android:layout_marginEnd="18dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/tv_name" app:layout_constraintTop_toBottomOf="@+id/fr_top"/>
    <androidx.constraintlayout.widget.Group android:id="@+id/group_url" android:layout_width="wrap_content" android:layout_height="wrap_content" app:constraint_referenced_ids="view_line,tv_url,etv_url,tv_tips"/>
    <View android:id="@+id/view_line" android:background="#e8e8e8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="21dp" android:layout_marginStart="18dp" android:layout_marginEnd="18dp" app:layout_constraintTop_toBottomOf="@+id/tv_name"/>
    <TextView android:textSize="14dp" android:textColor="#222222" android:id="@+id/tv_url" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="瓦片下载地址:" android:layout_marginStart="18dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/view_line"/>
    <EditText android:textSize="14dp" android:textColor="#222222" android:textColorHint="#cccccc" android:gravity="start" android:id="@+id/etv_url" android:background="@drawable/bg_add_layer_url" android:padding="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:minHeight="100dp" android:hint="请输入瓦片下载模版地址，例如:http://tile.openstreetmap.org/(z/x/y.png" android:layout_marginEnd="18dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="@+id/tv_url" app:layout_constraintTop_toBottomOf="@+id/tv_url"/>
    <TextView android:textSize="12dp" android:textColor="#666666" android:id="@+id/tv_tips" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:text="说明:下载地址中可用{x,y, 分别代表瓦片的x坐标，y坐标和地图缩放等级。如OpenStreetMap的瓦片模版为: http://tile.openstreetmap.org/zxyt.png" android:layout_marginStart="18dp" android:layout_marginEnd="18dp" app:layout_constraintTop_toBottomOf="@+id/etv_url"/>
    <Button android:textSize="14dp" android:textColor="@color/white" android:id="@+id/btn_save" android:background="@drawable/login_send_code_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="56dp" android:text="保存" android:layout_marginStart="18dp" android:layout_marginEnd="18dp" app:layout_constraintTop_toBottomOf="@+id/tv_tips"/>
</androidx.constraintlayout.widget.ConstraintLayout>
