        <ImageView android:id="@+id/iv_content" android:layout_width="60dp" android:layout_height="60dp" android:scaleType="centerCrop" android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <FrameLayout android:id="@+id/ll_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginStart="14dp" app:layout_constraintStart_toEndOf="@+id/iv_content" app:layout_constraintTop_toTopOf="@+id/iv_content">
