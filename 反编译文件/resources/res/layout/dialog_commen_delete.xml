<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/constraint_root" android:background="@drawable/dialog_user_point" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="16dp" android:textColor="@color/black" android:layout_gravity="center_horizontal" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="28dp" android:layout_marginBottom="28dp" android:text="删除该评论？"/>
    <View android:background="#e4e4e4" android:layout_width="match_parent" android:layout_height="1dp"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_gravity="center_horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
            <TextView android:textSize="16dp" android:textColor="#666666" android:gravity="center" android:id="@+id/btn_cancel" android:background="@color/white" android:paddingTop="9dp" android:layout_width="0dp" android:layout_height="40dp" android:text="取消" android:layout_weight="1"/>
            <TextView android:textSize="16dp" android:textColor="#df010a" android:gravity="center" android:id="@+id/btn_ok" android:background="@color/white" android:paddingTop="9dp" android:layout_width="0dp" android:layout_height="40dp" android:minWidth="100dp" android:text="确定" android:layout_weight="1"/>
        </LinearLayout>
        <View android:layout_gravity="center" android:background="#e4e4e4" android:layout_width="1dp" android:layout_height="48dp"/>
    </FrameLayout>
</LinearLayout>
