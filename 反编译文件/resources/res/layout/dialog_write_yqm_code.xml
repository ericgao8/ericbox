<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/btn_white_12rd" android:padding="15dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14dp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="我的邀请码"/>
        <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_my_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="889999" android:layout_marginStart="14dp"/>
        <TextView android:textSize="12dp" android:textColor="@color/color_3A5BFF" android:id="@+id/tv_copy" android:background="@drawable/corner_bg_jwd" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="复制" android:paddingStart="12dp" android:paddingEnd="12dp" android:layout_marginStart="15dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_txyqm" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
        <TextView android:textSize="14dp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="填写邀请码"/>
        <EditText android:textSize="16dp" android:textColor="@color/black" android:gravity="center" android:id="@+id/etv_code" android:background="@drawable/bg_soild_gray_99" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="120dp" android:layout_height="wrap_content" android:paddingStart="5dp" android:paddingEnd="5dp" android:layout_marginStart="14dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_sj" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
        <TextView android:textSize="14dp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="上级用户名"/>
        <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_sj_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="889999" android:layout_marginStart="14dp"/>
        <TextView android:textSize="12dp" android:textColor="@color/color_3A5BFF" android:background="@drawable/corner_bg_jwd" android:paddingTop="4dp" android:paddingBottom="4dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="复制" android:paddingStart="12dp" android:paddingEnd="12dp" android:layout_marginStart="15dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp">
        <TextView android:textColor="@color/color_3A5BFF" android:gravity="center" android:id="@+id/tv_delete" android:background="@drawable/btn_e7e7e7_bg" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="取消" android:layout_weight="1"/>
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_share" android:background="@drawable/btn_blue_bg" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="确定" android:layout_weight="1" android:layout_marginStart="20dp"/>
    </LinearLayout>
</LinearLayout>
