<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/constraint_root" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_content" android:background="@drawable/bg_draw_pen_size" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0">
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
            <ImageView android:layout_gravity="end" android:id="@+id/iv_close" android:background="@mipmap/ic_close_size" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </FrameLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_edit" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:background="@mipmap/ic_collect_edit" android:layout_width="25dp" android:layout_height="25dp"/>
                <TextView android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="编辑"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_delete" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:background="@mipmap/ic_collect_del" android:layout_width="25dp" android:layout_height="25dp"/>
                <TextView android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_del" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="删除"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_share_ma" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:background="@mipmap/ic_collect_share" android:layout_width="25dp" android:layout_height="25dp"/>
                <TextView android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_share_ma" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="分享码"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_share" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:background="@mipmap/ic_collect_share" android:layout_width="25dp" android:layout_height="25dp"/>
                <TextView android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_share" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="分享"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
