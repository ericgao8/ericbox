<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#f9f9f9" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/ll_jingdu" android:background="@color/white" android:padding="16dp" android:layout_width="match_parent" android:layout_height="64dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
        <TextView android:textSize="14dp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="经度"/>
        <EditText android:textSize="14dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:id="@+id/etv_jingdu" android:background="@drawable/bg_search_red" android:layout_width="0dp" android:layout_height="match_parent" android:hint="请输入经度" android:layout_weight="1" android:paddingStart="16dp" android:layout_marginStart="16dp"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/ll_weidu" android:background="@color/white" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="32dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/ll_jingdu">
        <TextView android:textSize="14dp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="纬度"/>
        <EditText android:textSize="14dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:id="@+id/etv_weidu" android:background="@drawable/bg_search_red" android:layout_width="0dp" android:layout_height="match_parent" android:hint="请输入纬度" android:layout_weight="1" android:paddingStart="16dp" android:layout_marginStart="16dp"/>
    </LinearLayout>
    <FrameLayout android:background="@color/white" android:paddingTop="50dp" android:paddingBottom="50dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="15dp" android:paddingEnd="15dp" app:layout_constraintTop_toBottomOf="@+id/ll_weidu">
        <Button android:textSize="14dp" android:textColor="@color/white" android:id="@+id/btn_search" android:background="@drawable/btn_blue_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="搜索"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
