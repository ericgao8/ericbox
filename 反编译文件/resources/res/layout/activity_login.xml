<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#eee" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout android:background="@color/black" android:layout_width="0dp" android:layout_height="40dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
        <TextView android:textSize="20sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="三维地图" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.LinearLayoutCompat android:orientation="horizontal" android:id="@+id/ll_btn_container" android:layout_width="0dp" android:layout_height="40dp" android:layout_marginLeft="20dp" android:layout_marginTop="50dp" android:layout_marginRight="20dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
        <Button android:textSize="20sp" android:textColor="@color/white" android:id="@+id/login" android:background="#ff0000" android:layout_width="0dp" android:layout_height="match_parent" android:text="登录账号" android:layout_weight="1"/>
        <Button android:textSize="20sp" android:textColor="#222" android:id="@+id/active" android:background="@color/white" android:layout_width="0dp" android:layout_height="match_parent" android:text="激活账号" android:layout_weight="1"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View android:background="#ccc" android:layout_width="0dp" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/ll_btn_container"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/login_container" android:background="@color/white" android:visibility="visible" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="1dp" app:layout_constraintLeft_toLeftOf="@+id/ll_btn_container" app:layout_constraintRight_toRightOf="@+id/ll_btn_container" app:layout_constraintTop_toBottomOf="@+id/ll_btn_container">
        <TextView android:textSize="18sp" android:textColor="#222" android:id="@+id/tv_account_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:text="账号:" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
        <EditText android:id="@+id/ed_account" android:background="@drawable/corner_bg_light_gray" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="40dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:hint="请输入账号" app:layout_constraintLeft_toRightOf="@+id/tv_account_title" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="18sp" android:textColor="#222" android:id="@+id/tv_account_pwd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="40dp" android:text="密码:" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_account_title"/>
        <EditText android:id="@+id/ed_pwd" android:background="@drawable/corner_bg_light_gray" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="40dp" android:layout_marginLeft="10dp" android:layout_marginTop="30dp" android:layout_marginRight="10dp" android:layout_marginBottom="20dp" android:hint="请输入密码" android:inputType="textPassword" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/tv_account_title" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_account_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_active" android:background="@color/white" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="1dp" app:layout_constraintLeft_toLeftOf="@+id/ll_btn_container" app:layout_constraintRight_toRightOf="@+id/ll_btn_container" app:layout_constraintTop_toBottomOf="@+id/ll_btn_container">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
            <TextView android:textSize="18sp" android:textColor="#222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="账号:"/>
            <EditText android:id="@+id/et_phone" android:background="@drawable/corner_bg_light_gray" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:hint="请输入11位手机号" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
            <TextView android:textSize="18sp" android:textColor="#222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="密码:"/>
            <EditText android:id="@+id/et_pwd" android:background="@drawable/corner_bg_light_gray" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:hint="请输入密码" android:layout_weight="1" android:inputType="textPassword"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="3dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp">
            <TextView android:textSize="18sp" android:textColor="#222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="激活码:"/>
            <EditText android:id="@+id/et_active_code" android:background="@drawable/corner_bg_light_gray" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:hint="请输入密码" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:textSize="18sp" android:id="@+id/btn_login" android:background="#ff0000" android:layout_width="0dp" android:layout_height="40dp" android:layout_marginTop="20dp" android:text="点击登录系统" app:layout_constraintLeft_toLeftOf="@+id/ll_btn_container" app:layout_constraintRight_toRightOf="@+id/ll_btn_container" app:layout_constraintTop_toBottomOf="@+id/login_container" app:layout_goneMarginTop="220dp"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/btn_login">
        <TextView android:textSize="12dp" android:textColor="#888" android:id="@+id/tv_xy_one" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="登录代表阅读并且同意协议"/>
        <TextView android:textSize="12dp" android:textColor="@android:color/holo_red_dark" android:id="@+id/tv_xy_three" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="《隐私政策》"/>
        <TextView android:textSize="12dp" android:textColor="#888" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="和"/>
        <TextView android:textSize="12dp" android:textColor="@android:color/holo_red_dark" android:id="@+id/tv_xy_two" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="《用户协议》"/>
    </LinearLayout>
    <TextView android:textSize="15sp" android:textColor="#888" android:id="@+id/forget_pwd" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="忘记密码点击这里" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/btn_login"/>
    <TextView android:textColor="#222" android:id="@+id/active_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="激活码:JBSLJ" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/forget_pwd"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/search_loading" android:background="@drawable/circle_translucent_black_bg" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/search_loading_icon" android:layout_width="40dp" android:layout_height="40dp" android:src="@mipmap/loading_icon"/>
        <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#ccc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="登录中..."/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
