<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fr_top" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp" app:layout_constraintTop_toTopOf="0">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:background="@mipmap/ic_back" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="7dp"/>
        <TextView android:textSize="17dp" android:textColor="@color/black" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="更多工具"/>
    </FrameLayout>
    <TextView android:textSize="16dp" android:textColor="@color/black" android:id="@+id/tv_my" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="展现工具(点击移除)" android:paddingStart="5dp" app:layout_constraintTop_toBottomOf="@+id/fr_top"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/my_menu_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:layout_constraintTop_toBottomOf="@+id/tv_my"/>
    <TextView android:textSize="16dp" android:textColor="@color/black" android:id="@+id/tv_more" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="隐藏工具(点击增加)" android:paddingStart="5dp" app:layout_constraintTop_toBottomOf="@+id/my_menu_list"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/red_menu_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:layout_constraintTop_toBottomOf="@+id/tv_more"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/list_config" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="25dp" android:layout_marginBottom="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toBottomOf="@+id/red_menu_list"/>
</androidx.constraintlayout.widget.ConstraintLayout>
