<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/root" android:background="#f9f9f9" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fr_top" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp" app:layout_constraintTop_toTopOf="0">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:background="@mipmap/ic_back" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="7dp"/>
        <TextView android:textSize="17dp" android:textColor="@color/black" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="申请成为飞手"/>
    </FrameLayout>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toBottomOf="@+id/fr_top">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:background="@color/white" android:paddingTop="12dp" android:paddingBottom="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:paddingStart="18dp" android:paddingEnd="18dp">
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
                    <TextView android:textSize="14dp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="0dp" android:text="姓名:" android:layout_weight="1"/>
                    <TextView android:textSize="14dp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/tv_sex" android:layout_width="wrap_content" android:layout_height="0dp" android:text="性别:" android:layout_weight="1"/>
                    <TextView android:textSize="14dp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/tv_age" android:layout_width="wrap_content" android:layout_height="0dp" android:text="年龄:" android:layout_weight="1"/>
                    <TextView android:textSize="14dp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/tv_cynx" android:layout_width="wrap_content" android:layout_height="0dp" android:text="从业年限:" android:layout_weight="1"/>
                    <TextView android:textSize="14dp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/tv_phone" android:layout_width="wrap_content" android:layout_height="0dp" android:text="手机号:" android:layout_weight="1"/>
                    <TextView android:textSize="14dp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/tv_wechat" android:layout_width="wrap_content" android:layout_height="0dp" android:text="微信号:" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="24dp">
                    <EditText android:textSize="12dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:gravity="start" android:id="@+id/etv_name" android:background="@drawable/bg_e8e8e8_line_8rd" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="请输入你的姓名" android:paddingStart="9dp" android:paddingEnd="9dp"/>
                    <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginTop="15dp">
                        <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_nan" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:id="@+id/iv_nan" android:layout_width="14dp" android:layout_height="14dp" android:src="@mipmap/ic_sex_select" android:layout_marginStart="20dp"/>
                            <TextView android:textSize="14dp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="男" android:layout_marginStart="4dp"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_nv" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:id="@+id/iv_nv" android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/circle_sex_bg" android:layout_marginStart="20dp"/>
                            <TextView android:textSize="14dp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="女" android:layout_marginStart="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <EditText android:textSize="12dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:id="@+id/etv_age" android:background="@drawable/bg_e8e8e8_line_8rd" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:hint="请输入你的年龄" android:inputType="phone" android:paddingStart="9dp" android:paddingEnd="9dp"/>
                    <EditText android:textSize="12dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:id="@+id/etv_cynx" android:background="@drawable/bg_e8e8e8_line_8rd" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:hint="请输入你的从业年限" android:inputType="phone" android:paddingStart="9dp" android:paddingEnd="9dp"/>
                    <EditText android:textSize="12dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:id="@+id/etv_phone" android:background="@drawable/bg_e8e8e8_line_8rd" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:hint="请输入你的手机号码" android:inputType="phone" android:paddingStart="9dp" android:paddingEnd="9dp"/>
                    <EditText android:textSize="12dp" android:textColor="@color/black" android:textColorHint="#cccccc" android:id="@+id/etv_wechat" android:background="@drawable/bg_e8e8e8_line_8rd" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:hint="请输入你的微信号" android:inputType="phone" android:paddingStart="9dp" android:paddingEnd="9dp"/>
                </LinearLayout>
            </LinearLayout>
            <Button android:textSize="14dp" android:textColor="@color/white" android:id="@+id/btn_upload" android:background="@drawable/btn_blue_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="提交申请" android:layout_marginStart="18dp" android:layout_marginEnd="18dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
