<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/root" android:background="#f9f9f9" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fr_top" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp" app:layout_constraintTop_toTopOf="0">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:background="@mipmap/ic_back" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="7dp"/>
        <TextView android:textSize="17dp" android:textColor="#222222" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="举报"/>
    </FrameLayout>
    <TextView android:textSize="12dp" android:textColor="#999999" android:id="@+id/tv_sub_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="请选择举报原因" android:layout_marginStart="15dp" android:layout_marginEnd="15dp" app:layout_constraintTop_toBottomOf="@+id/fr_top"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/list_report" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:paddingStart="15dp" android:paddingEnd="15dp" app:layout_constraintTop_toBottomOf="@+id/tv_sub_title"/>
    <Button android:textSize="16dp" android:textColor="#ffffff" android:id="@+id/btn_ok" android:background="@drawable/btn_finish_bg" android:layout_width="160dp" android:layout_height="wrap_content" android:layout_marginTop="88dp" android:text="提交" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/list_report"/>
</androidx.constraintlayout.widget.ConstraintLayout>
