<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/color_3A5BFF" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/frame_content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
        <ImageView android:id="@+id/iv_content" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <ImageView android:id="@+id/iv_close" android:background="@mipmap/ic_draw_pic_cancel" android:layout_width="16dp" android:layout_height="16dp"/>
    <ImageView android:layout_gravity="end" android:id="@+id/iv_confirm" android:background="@mipmap/ic_draw_pic_ok" android:layout_width="16dp" android:layout_height="16dp"/>
    <ImageView android:layout_gravity="top|center_horizontal" android:id="@+id/iv_zhantu" android:background="@mipmap/ic_draw_pic_zhantu" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <ImageView android:layout_gravity="end|bottom" android:id="@+id/iv_sacale" android:background="@mipmap/ic_draw_pic_scale" android:layout_width="16dp" android:layout_height="16dp"/>
    <ImageView android:layout_gravity="start|bottom" android:id="@+id/iv_rotate" android:background="@mipmap/ic_draw_pic_rotate" android:layout_width="16dp" android:layout_height="16dp"/>
</FrameLayout>
