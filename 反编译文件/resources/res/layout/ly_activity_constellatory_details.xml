<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/cj_content_bg_xzys_details" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp">
        <ImageView android:id="@+id/oset_iv_back" android:padding="10dp" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="10dp" android:src="@mipmap/ly_constellatory_dial_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="星座运势" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:paddingLeft="20dp" android:paddingTop="38dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/iv_constellatory" android:layout_width="56dp" android:layout_height="56dp"/>
            <TextView android:textSize="18sp" android:textColor="@android:color/white" android:layout_gravity="center_horizontal" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:text="白羊座" android:layout_centerHorizontal="true"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="22dp">
                <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="综合指数："/>
                <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <View android:id="@+id/v_progress_all_bg" android:background="@drawable/ly_constellatory_progress_bg" android:layout_width="match_parent" android:layout_height="6dp" android:layout_marginRight="40dp" android:layout_centerVertical="true"/>
                    <View android:id="@+id/v_progress_all" android:background="@drawable/ly_constellatory_progress" android:layout_width="0dp" android:layout_height="6dp" android:layout_marginRight="40dp" android:layout_centerVertical="true"/>
                    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/tv_num_all" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="财运指数："/>
                <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <View android:id="@+id/v_progress_money_bg" android:background="@drawable/ly_constellatory_progress_bg" android:layout_width="match_parent" android:layout_height="6dp" android:layout_marginRight="40dp" android:layout_centerVertical="true"/>
                    <View android:id="@+id/v_progress_money" android:background="@drawable/ly_constellatory_progress" android:layout_width="0dp" android:layout_height="6dp" android:layout_marginRight="40dp" android:layout_centerVertical="true"/>
                    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/tv_num_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="爱情指数："/>
                <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <View android:id="@+id/v_progress_love_bg" android:background="@drawable/ly_constellatory_progress_bg" android:layout_width="match_parent" android:layout_height="6dp" android:layout_marginRight="40dp" android:layout_centerVertical="true"/>
                    <View android:id="@+id/v_progress_love" android:background="@drawable/ly_constellatory_progress" android:layout_width="0dp" android:layout_height="6dp" android:layout_marginRight="40dp" android:layout_centerVertical="true"/>
                    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/tv_num_love" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="工作指数："/>
                <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <View android:id="@+id/v_progress_work_bg" android:background="@drawable/ly_constellatory_progress_bg" android:layout_width="match_parent" android:layout_height="6dp" android:layout_marginRight="40dp" android:layout_centerVertical="true"/>
                    <View android:id="@+id/v_progress_work" android:background="@drawable/ly_constellatory_progress" android:layout_width="0dp" android:layout_height="6dp" android:layout_marginRight="40dp" android:layout_centerVertical="true"/>
                    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/tv_num_work" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="幸  运  色："/>
                <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/tv_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="蓝色"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="幸运数字："/>
                <TextView android:textSize="16sp" android:textColor="#fff6c8" android:id="@+id/tv_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="11"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="30dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="运势总结："/>
                    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/tv_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="总结"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
