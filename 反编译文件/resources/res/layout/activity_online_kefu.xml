<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#f9f9f9" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fr_top" android:layout_width="match_parent" android:layout_height="48dp" app:layout_constraintTop_toTopOf="0">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:background="@mipmap/ic_back" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="7dp"/>
        <TextView android:textSize="17dp" android:textColor="@color/black" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="智能客服"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/list_add" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="12dp" android:layout_marginBottom="10dp" android:layout_marginStart="18dp" android:layout_marginEnd="18dp" app:layout_constraintBottom_toTopOf="@+id/ll_fun" app:layout_constraintTop_toBottomOf="@+id/fr_top"/>
    <LinearLayout android:id="@+id/ll_fun" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/ll_bottom">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="18dp">
            <TextView android:textSize="12dp" android:textColor="#000000" android:id="@+id/tv_question1" android:background="@drawable/bg_soild_white_90rd" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="标记功能怎么用?" android:paddingStart="16dp" android:paddingEnd="16dp"/>
            <TextView android:textSize="12dp" android:textColor="#000000" android:id="@+id/tv_question2" android:background="@drawable/bg_soild_white_90rd" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="街景功能怎么使用?" android:paddingStart="16dp" android:paddingEnd="16dp"/>
            <TextView android:textSize="12dp" android:textColor="#000000" android:id="@+id/tv_question3" android:background="@drawable/bg_soild_white_90rd" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="VR全景怎么用?" android:paddingStart="16dp" android:paddingEnd="16dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="18dp">
            <TextView android:textSize="12dp" android:textColor="#000000" android:id="@+id/tv_question4" android:background="@drawable/bg_soild_white_90rd" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VR找不到怎么办?" android:paddingStart="16dp" android:paddingEnd="16dp"/>
            <TextView android:textSize="12dp" android:textColor="#000000" android:id="@+id/tv_question5" android:background="@drawable/bg_soild_white_90rd" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="更多功能怎么用?" android:paddingStart="16dp" android:paddingEnd="16dp"/>
            <TextView android:textSize="12dp" android:textColor="#000000" android:id="@+id/tv_question6" android:background="@drawable/bg_soild_white_90rd" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="使用说明" android:paddingStart="16dp" android:paddingEnd="16dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/ll_bottom" android:background="@color/white" android:layout_width="match_parent" android:layout_height="56dp" app:layout_constraintBottom_toBottomOf="0">
        <TextView android:textColor="@color/black" android:textColorHint="#cccccc" android:gravity="start|center_vertical" android:id="@+id/tv_send_content" android:background="@drawable/btn_f8f8f8_90rd" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginTop="7dp" android:layout_marginBottom="7dp" android:hint="请输入信息" android:layout_weight="1" android:paddingStart="10dp" android:layout_marginStart="7dp"/>
        <TextView android:textSize="16dp" android:textColor="@color/white" android:id="@+id/tv_send" android:background="@drawable/btn_send_xiaoxi_bg" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_marginBottom="7dp" android:text="发送" android:paddingStart="19dp" android:paddingEnd="19dp" android:layout_marginStart="14dp" android:layout_marginEnd="15dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
